@using ASP.NETCoreMVCAssignment1.QuachVanViet.Enum
@model Person

<h4 class="mb-4">Person Details</h4>
<hr />

<div class="p-4 border rounded shadow-sm bg-light">
    <div class="mb-3 row">
        <label asp-for="FirstName" class="col-sm-2 col-form-label fw-bold">First Name</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext">@Model.FirstName</p>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="LastName" class="col-sm-2 col-form-label fw-bold">Last Name</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext">@Model.LastName</p>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Gender" class="col-sm-2 col-form-label fw-bold">Gender</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext">@Model.Gender</p>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="DateOfBirth" class="col-sm-2 col-form-label fw-bold">Date of Birth</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext">@Model.DateOfBirth.ToString("yyyy-MM-dd")</p>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label fw-bold">Phone Number</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext">@Model.PhoneNumber</p>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="BirthPlace" class="col-sm-2 col-form-label fw-bold">Birth Place</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext">@Model.BirthPlace</p>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="IsGraduated" class="col-sm-2 col-form-label fw-bold">Is Graduated</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext">@(Model.IsGraduated ? "Yes" : "No")</p>
        </div>
    </div>

    <div class="d-flex gap-2">
        @if (Model.Id != Guid.Empty) // Chỉ hiển thị Delete nếu đang ở Details
        {
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this person?');" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        }
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
