@using ASP.NETCoreMVCAssignment1.QuachVanViet.Enum
@model Person

<h4 class="mb-4">@(Model.Id == Guid.Empty ? "Create Person" : "Person Edits")</h4>
<hr />

<form asp-action="Save" method="post" class="p-4 border rounded shadow-sm bg-light">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3 row">
        <label asp-for="FirstName" class="col-sm-2 col-form-label fw-bold">First Name</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="LastName" class="col-sm-2 col-form-label fw-bold">Last Name</label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Gender" class="col-sm-2 col-form-label fw-bold">Gender</label>
        <div class="col-sm-10">
            <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="DateOfBirth" class="col-sm-2 col-form-label fw-bold">Date of Birth</label>
        <div class="col-sm-10">
            <input asp-for="DateOfBirth" class="form-control" type="date" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label fw-bold">Phone Number</label>
        <div class="col-sm-10">
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="BirthPlace" class="col-sm-2 col-form-label fw-bold">Birth Place</label>
        <div class="col-sm-10">
            <input asp-for="BirthPlace" class="form-control" />
            <span asp-validation-for="BirthPlace" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="IsGraduated" class="col-sm-2 col-form-label fw-bold">Is Graduated</label>
        <div class="col-sm-10">
            <input asp-for="IsGraduated" type="checkbox" class="form-check-input" />
            <span asp-validation-for="IsGraduated" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}